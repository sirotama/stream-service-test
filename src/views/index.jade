extends ./base
block head
    meta(charset="UTF-8")
    title ウンチーコング
    // videojs
        link(href='http://vjs.zencdn.net/4.2.0/video-js.css', rel='stylesheet')
        script(src='http://vjs.zencdn.net/4.2.0/video.js')
        style.
            .vjs-big-play-button {
                left: 40% !important;
                top: 40% !important;
                width: 20%;
                height: 20%;
            }
            .vjs-play-control:before {
                top:20% !important;
                content: '\f101';
                font-size: 20px;
            }
    // script.
        $(function(){
            var playBT = $(".vjs-big-play-button");
            playBT.css({
                left:( (playBT.parent().outerWidth()-playBT.outerWidth())/2 )+"px",
                top:( (playBT.parent().outerHeight()-playBT.outerHeight())/2 )+"px"
            });
        });
    script(src="//cdn.jsdelivr.net/hls.js/latest/hls.min.js")
    script.
        $(function(){
            var video = document.getElementById("player")
            var hls = new Hls()
            hls.loadSource(video.currentSrc)
            hls.attachMedia(video)
        })
