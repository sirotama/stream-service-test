extends ./base
block head
    meta(charset="UTF-8")
    title @#{user.screenName} Profile - MisskeyTV
    style.
        .alert{
            position:relative;
            height:3.5rem;
        }
        .alert .btn{
            position:absolute;
            right:1.25rem;
        }
    script.
        $(function(){
            $("time").each(function(i, elem) {
                var $elem=$(elem)
                var date=new Date($elem.attr("datetime"))
                $elem.text(moment(date).format("YYYY/MM/DD HH:mm"))
            });
        })

block content
    h1 @#{user.screenName}
    if now_live
        .alert.alert-info
            | Now live
            a(href="/live/"+user.screenName).btn.btn-primary.btn-sm Watch!
    h2 配信
    table.table.table-bordered
        tr
            th 状態
            th 開始時間
            th タイトル
        each live in lives
            tr
                td= live.status
                td: time(datetime=live.createdAt.toISOString())
                td: a(href='/live/'+user.screenName)= live.name
